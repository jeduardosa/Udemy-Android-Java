<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListaDeTarefas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryVariant">@color/ColorAccent</item>
        <item name="colorOnPrimary">@color/ColorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ColorPrimary</item>
        <item name="colorSecondaryVariant">@color/ColorAccent</item>
        <item name="colorOnSecondary">@color/ColorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ListaDeTarefas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListaDeTarefas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ListaDeTarefas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>